<?xml version="1.0" encoding="utf-8"?>
<navigation
  xmlns:android="http://schemas.android.com/apk/res/android"
  xmlns:app="http://schemas.android.com/apk/res-auto"
  xmlns:tools="http://schemas.android.com/tools"
  android:id="@+id/nav_main"
  app:startDestination="@id/homeScreen">

  <fragment
    android:id="@+id/secondScreen"
    android:name="edu.mobileprogrammingclasses.SecondFragment"
    tools:layout="@layout/fragment_second">
    <argument
      android:name="text"
      app:argType="string" />
  </fragment>

  <fragment
    android:id="@+id/homeScreen"
    android:name="edu.mobileprogrammingclasses.StartFragment"
    tools:layout="@layout/fragment_start">
    <action
      android:id="@+id/actionNavigateToSecondScreen"
      app:destination="@id/secondScreen" />
  </fragment>

</navigation>